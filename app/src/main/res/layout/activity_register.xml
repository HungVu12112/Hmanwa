<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#362C35"
    tools:context=".activity.Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnback8"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/img_13"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="23sp"
                android:layout_marginLeft="23dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/img_14"/>

        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/textlogin">

            <!-- INPUT -->

            <!-- ICON -->
            <EditText
                android:id="@+id/edusername_reg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/username_icon"
                android:hint="Tài khoản "
                android:textColor="@color/white"
                android:padding="10dp"
                android:text=""
                android:textColorHint="#AEAEAE" />

            <ImageView
                android:id="@+id/username_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:src="@drawable/img_16" />

        </RelativeLayout>
        <TextView
            android:id="@+id/signup_error_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="7dp"

            />



        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textlogin">

            <!-- INPUT -->
            <EditText
                android:id="@+id/edpass_reg"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/username_icon2"
                android:text=""
                android:hint="Mật khẩu"
                android:textColorHint="#AEAEAE"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!-- ICON -->
            <ImageView
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:id="@+id/username_icon2"
                android:src="@drawable/ic_password"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/signup_error_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="7dp"

            />
        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textlogin">

            <!-- INPUT -->
            <EditText
                android:id="@+id/edemail_reg"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/username_icon1"
                android:text=""
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#AEAEAE"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!-- ICON -->
            <ImageView
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:id="@+id/username_icon1"
                android:src="@drawable/baseline_email_24"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/signup_error_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="7dp"

            />
        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textlogin">

            <!-- INPUT -->

            <!-- ICON -->
            <EditText
                android:id="@+id/edfullname_reg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/username_icon3"
                android:hint="Tên đầy đủ "
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#AEAEAE" />

            <ImageView
                android:id="@+id/username_icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:src="@drawable/img_16" />

        </RelativeLayout>
        <TextView
            android:id="@+id/signup_error_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="27dp"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_regall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/bg_btn"
            android:textSize="20dp"
            android:text="Đăng Ký"
            android:textAllCaps="false"
            android:textColor="#362C35"/>

    </LinearLayout>

</LinearLayout>