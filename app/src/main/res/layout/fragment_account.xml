<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#362C35"
    tools:context=".fragment.AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#362C35">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="40dp"
                >
                <ImageView
                    android:id="@+id/imgaccount"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/baseline_account_circle_24"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvnameaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HungPro"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#EFE4C8"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tvEmailAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HungPro"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:textColor="#EFE4C8"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ttDoneDangNhap"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hồ sơ cá nhân"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ttDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cài đặt tài khoản"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/btnchangeProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_5"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cá nhân"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnchangepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_7"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đổi mật khẩu"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/btnlogoutTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_8"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đăng xuất tài khoản"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điều khoản"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/btnDieuKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_11"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểù khoản và dịch vụ"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_12"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liên hệ với chúng tôi"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/btnChangeLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_22"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngôn ngữ"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnThoat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_23"/>
                    <TextView
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thoát"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/img_6"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>